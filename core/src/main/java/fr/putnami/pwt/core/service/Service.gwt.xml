<module>
	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.common.collect.Collect" />
	
	<inherits name="fr.putnami.pwt.core.event.Event"/>
	<inherits name="fr.putnami.pwt.core.error.Error"/>


	<source path="client"/>
	<source path="shared"/>

	<generate-with class="fr.putnami.pwt.core.service.rebind.ServiceBinderGenerator">
		<when-type-assignable class="fr.putnami.pwt.core.service.client.ServiceProxy" />
	</generate-with>
	
	<replace-with class="fr.putnami.pwt.core.service.client.DefaultCommandController">
		<when-type-is class="fr.putnami.pwt.core.service.client.CommandController"/>
	</replace-with>

</module>