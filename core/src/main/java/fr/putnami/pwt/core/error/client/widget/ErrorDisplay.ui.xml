<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:a="urn:import:fr.putnami.pwt.core.widget.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	>

	<ui:with field="constants" type="fr.putnami.pwt.core.error.client.widget.ErrorDisplay.Constants" />
	
	<a:Modal ui:field="modal" title="{constants.errorDialogTitle}">
		<g:FlowPanel ui:field="modalContent" />
		<a:Footer>
			<a:Button ui:field="reloadButton" text="{constants.reloadButton}" iconType="CW" size="DEFAULT" type="DANGER" />
			<a:Button ui:field="continueButton" text="{constants.continueButton}" iconType="OK" size="DEFAULT" type="WARNING" />
		</a:Footer>
	</a:Modal>
</ui:UiBinder>