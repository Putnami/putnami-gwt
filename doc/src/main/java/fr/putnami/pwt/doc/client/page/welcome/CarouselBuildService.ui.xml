<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:w="urn:import:fr.putnami.pwt.core.widget.client"
	xmlns:c="urn:import:fr.putnami.pwt.plugin.code.client"
	>
	<ui:import field="fr.putnami.pwt.plugin.code.client.configuration.java.JavaConfiguration.JAVA_CONFIGURATION" />
	<ui:import field="fr.putnami.pwt.plugin.code.client.configuration.xml.XmlConfiguration.XML_CONFIGURATION" />

	<w:HTMLPanel styleName="carouselService">
		<w:Heading level="1">Simple use of services</w:Heading>
		<w:GridRow xsVisibility="HIDDEN">
			<w:GridColumn size="12">
				<c:StaticCode configuration="{JAVA_CONFIGURATION}">
<pre><![CDATA[
@InjectService
interface MyRemoteService extends ServiceProxy<MyView, MyService>, MyService {
	MyRemoteService SERVICE = GWT.create(MyRemoteService.class);
}

public MyView() {
    ...
    MyRemoteService.SERVICE.bindService(this);
}
...
MyRemoteService.SERVICE.method(String arg)
...
@AsyncHandler
void onMethod(String result) { ... };
...
@AsyncHandler
void onMethodThrown(Throwable thrown) { ... };

]]></pre>
				</c:StaticCode>
			</w:GridColumn>
		</w:GridRow>
	</w:HTMLPanel>
</ui:UiBinder>
