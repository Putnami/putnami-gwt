<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:w="urn:import:fr.putnami.pwt.core.widget.client"
	xmlns:c="urn:import:fr.putnami.pwt.plugin.code.client"
	>
	<ui:import field="fr.putnami.pwt.plugin.code.client.configuration.java.JavaConfiguration.JAVA_CONFIGURATION" />
	<ui:import field="fr.putnami.pwt.plugin.code.client.configuration.xml.XmlConfiguration.XML_CONFIGURATION" />

	<w:HTMLPanel>
		<w:Heading level="1">Bind a form</w:Heading>
		<w:GridRow>
			<w:GridColumn size="6">
				<strong>ui.xml</strong>
				<c:StaticCode configuration="{XML_CONFIGURATION}">
<pre><![CDATA[
<w:Form ui:field="form">
	<w:FormGroup path="name" />
	<w:FormGroup path="email">
		<w:InputEmail />
	</w:FormGroup>
	<w:FormGroup path="address.email">
	<w:FormSubmitButton>Submit</w:FormSubmitButton>
</w:Form>
]]></pre>
				</c:StaticCode>
			</w:GridColumn>
			<w:GridColumn size="6">
				<strong>java</strong>
				<c:StaticCode configuration="{JAVA_CONFIGURATION}">
<pre><![CDATA[
@UiField @Initialize(constantsClass = ...)
Form<Person> form;
...
form.edit(person);
...
@UiHandler("form")
void onFlush(FlushSuccessEvent event) { ... };

]]></pre>
				</c:StaticCode>
			</w:GridColumn>
		</w:GridRow>
	</w:HTMLPanel>
</ui:UiBinder>
