<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:w="urn:import:fr.putnami.pwt.core.widget.client">

	<w:HTMLPanel>
		<w:GridRow>
			<w:GridColumn ui:field="headerContainer" />
		</w:GridRow>
		<w:GridRow>
			<w:GridColumn ui:field="contentContainer" size="8" styleName="text-justify" />
			<w:GridColumn size="4">
				<w:Affix layerIndex="2" offsetTop="80" offsetBottom="250" xsVisibility="HIDDEN" smVisibility="HIDDEN" styleName="pwt-spy-affix">
					<w:NavSpy ui:field="tableOfContent" spyOffset="80"/>
				</w:Affix>
			</w:GridColumn>
		</w:GridRow>
	</w:HTMLPanel>

</ui:UiBinder>
