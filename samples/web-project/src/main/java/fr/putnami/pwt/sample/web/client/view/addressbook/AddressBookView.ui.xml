<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
				xmlns:a="urn:import:fr.putnami.pwt.core.widget.client"
        >

	<a:HTMLPanel>
		<a:GridRow>
			<a:GridColumn size="3">
				<div class="form-group">
					<div class="input-group">
						<a:InputText ui:field="searchBox" placeholder="Filter..." />
						<span class="input-group-btn"><a:Button ui:field="searchResetButton" iconType="CANCEL" /></span>
					</div>
				</div>
				<a:OutputList ui:field="groupsList" type="LIST_GROUP">
					<a:Form  ui:field="groupItemTemplate">
						<span class="badge pull-right"><a:OutputNumber path="memberSize" tag="span" /></span>
						<a:Anchor ui:field="selectGroupAnchor"><a:OutputText ui:field="name" path="name" tag="span"/></a:Anchor>
						<span class="clearfix" />
					</a:Form>
				</a:OutputList>
			</a:GridColumn>
			<a:GridColumn size="3">
				<a:ScrollPanel offsetTop="70">
					<a:OutputList ui:field="contactsList" type="LIST">
						<a:Form ui:field="contactItemTemplate">
							<strong><a:Anchor ui:field="openContactAnchor"><a:OutputText ui:field="contactName" path="name" tag="span"/></a:Anchor></strong>
							 - <a:OutputText path="address.city" tag="span" />
							<hr />
						</a:Form>
					</a:OutputList>
				</a:ScrollPanel>
			</a:GridColumn>
			<a:GridColumn size="6">
				<a:Form ui:field="contactDetails" type="HORIZONTAL">
					<a:Fieldset>
						<a:Legend>
							<a:FormGroup >
								<a:Label text="" />
								<a:InputGroup style="UNSTYLED">
									<a:GridRow>
										<a:GridColumn size="2">
											<a:InputSelect path="gender"/>
										</a:GridColumn>
										<a:GridColumn size="10">
											<a:InputText path="name"/>
										</a:GridColumn>
									</a:GridRow>
								</a:InputGroup>
								<a:OutputGroup>
									<a:OutputEnum path="gender" tag="span"/> 
									<strong>
										<a:OutputText path="name" tag="span"/>
									</strong>
								</a:OutputGroup>
							</a:FormGroup>
						</a:Legend>
						<a:FormGroup path="birthday" />
						<a:FormGroup path="emails" >
							<a:InputList>
								<a:InputEmail />
							</a:InputList>
							<a:OutputList >
								<a:OutputEmail />
							</a:OutputList>
						</a:FormGroup>
						<a:FormGroup>
							<a:Label path="address" />
							<a:InputGroup style="UNSTYLED">
								<a:GridRow>
									<a:GridColumn size="12">
										<a:InputText path="address.street" placeholder="number, street" />
									</a:GridColumn>
								</a:GridRow>
								<a:GridRow>
									<a:GridColumn size="3">
										<a:InputText path="address.postCode" placeholder="postcode"/>
									</a:GridColumn>
									<a:GridColumn size="9">
										<a:InputText path="address.city" placeholder="city"/>
									</a:GridColumn>
								</a:GridRow>
							</a:InputGroup>
							<a:OutputGroup>
								<a:OutputText path="address.street" />
								<a:OutputText path="address.postCode" tag="span" />
								<a:Text>&nbsp;-&nbsp;</a:Text>
								<a:OutputText path="address.city" tag="span" />
							</a:OutputGroup>
						</a:FormGroup>
						<a:FormGroup path="groups">
							<a:InputMultiSelect ui:field="groupSelect"/>
							<a:OutputList >
								<a:OutputText />
							</a:OutputList>
						</a:FormGroup>
						<hr/>
						<a:FormGroup path="remarks" >
							<a:InputTextArea />
						</a:FormGroup>
					</a:Fieldset>
				</a:Form>
			</a:GridColumn>
		</a:GridRow>
		<a:Affix offsetBottom="140" fixBottom="20" layerIndex="900">
			<a:GridRow>
				<a:GridColumn size="5" offset="6" styleName="sample-contact-actions">
					<a:ButtonGroup>
						<a:Button ui:field="newContactButton" iconType="ADD" text="New contact" type="LINK"/>
						<a:Button ui:field="editContactButton" iconType="EDIT" text="Edit contact" type="LINK"/>
					</a:ButtonGroup>
					<a:ButtonGroup styleName="pull-right">
						<a:Button ui:field="cancelContactButton" iconType="CANCEL" text="Cancel"/>
						<a:Button ui:field="saveContactButton" iconType="SAVE" text="Save" type="PRIMARY" />
					</a:ButtonGroup>
				</a:GridColumn>
			</a:GridRow>
		</a:Affix>
    </a:HTMLPanel>
</ui:UiBinder>