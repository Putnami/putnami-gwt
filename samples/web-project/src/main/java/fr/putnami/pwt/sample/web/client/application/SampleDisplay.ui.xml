<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:a="urn:import:fr.putnami.pwt.core.widget.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	>

	<a:HTMLPanel>
		<style>
			div.putnami-sample-header{
				background-color: #FFF;
				height: 55px;
			}
			footer.putnami-sample-footer{
				height: 120px;
				text-align: center;
				margin-top: 50px;
				padding: 49px 0;
				border: 1px solid #CCC;
			}
		</style>
		<a:Affix ui:field="affixMenu">
			<a:HTMLPanel styleName="putnami-sample-header">
				<a:Navbar position="STATIC_TOP">
					<a:Brand>
						<a:Anchor text="PWT - Sample Web app" link="#" />
					</a:Brand>
					<a:Nav>
						<a:NavLink label="Contacts List" link="#!Contacts"/>
						<a:NavLink label="Address book" link="#!AddressBook"/>
					</a:Nav>
				</a:Navbar>
			</a:HTMLPanel>
		</a:Affix>
		<g:SimplePanel ui:field="viewContainer" styleName="container-fluid" />
		<footer class="putnami-sample-footer"> 
			<p>Sample web app using <a href="https://github.com/Putnami/putnami-pwt" target="_blank">PWT - Putnami Web Framework</a>.</p>
		</footer>		
	</a:HTMLPanel>
</ui:UiBinder>